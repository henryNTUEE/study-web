<body class="body">
<%= render 'shared/errors', op: @article %>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form", multiport: true}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :title %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
            </div>
    </div>
     <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :description %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :description, rows: 10,class: "form-control", placeholder: "Content of article" %>
            </div>
     </div>
    <div class="form-group">
        <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
        </div>
        </div>
    </div> 
    <span class="picture">
        <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
        Choose an image to upload:
        </br>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
        </div>
        </br>
    </span>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>
    <div align="center">
        <%= link_to " Back to categories", articles_path %>
    </div>
    </div>
</div>

<script type="text/javascript">
    $('#article_picture').bind('change',function(){
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5){
            alert('Maximum file size is 5MB');
        }
    });
</script>
</body>
