<div id="article-lookup">
    <h3>Search for articles</h3>
    <%= form_tag search_articles_path, remote: true, method: :get, id: 'article-lookup-form' do %>
    <div class="form-group row no-padding text-center col-md-12">
        <div class="col-md-10">
            <%= text_field_tag :search_param,
                params[:search_param],
                placeholder: 'Username or Email',
                autofocus: true,
                class: 'form-control search-box input-lg' %>
        </div>
        <div class="col-md-2">
            <%= button_tag(type: :submit, class: 'btn btn-lg btn-success') do %>
                <i class='fa fa-search'></i> Look up a article
            <% end %>
        </div>
    </div>
    <% end %>
    <%= render 'common/spinner' %>
    <% if @users %>
    <% if @users.size > 0 %>
    <h3>Search Results</h3>
    <div id="article-lookup-results" class="well results-block col-md-12">
        <table class="search-results-table col-md-12">
        <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><strong>Name:</strong> <%= user.username %></td>
            <td><strong>Email:</strong> <%= user.email %></td>
            <td><strong>Profile:</strong> <%= link_to "View Profile", user_path(user), class: "btn btn-xs" %>
            <% if current_user.not_articles_with?(user.id) %>
                <%= link_to "Add as my article", add_article_path(user: current_user, article: user),
                class: 'btn btn-xs btn-primary', method: :post %>
             <% else %>
                <span class='label label-primary'>
                You are articles
                </span>
                
            <% end %>
            </td>
        </tr>
        <% end %>
        </tbody>
        </table>
    </div>
    <% else %>
        <p class="lead col-md-12">
            No people match this search criteria
        </p>
    <% end %>
<% end %>
<div id="article-lookup-errors"></div>
</div>